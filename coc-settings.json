{
	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		}
	},
	"diagnostic-languageserver.filetypes": {
		"vim": "vint",
		"sh": "shellcheck"
	},
	"diagnostic.enableHighlightLineNumber": true,
	"coc.preferences.rootPatterns": [".git", ".hg", ".projections.json", "*"],
	"explorer.width": 30,
	"explorer.icon.enableNerdfont": true,
	"explorer.keyMappings": {
		"i": false,
		"gk": "expandablePrev",
		"gj": "expandableNext",

		"*": "toggleSelection",
		"<tab>": "actionMenu",

		"J": ["toggleSelection", "nodeNext"],
		"K": ["toggleSelection", "nodePrev"],
		"gl": "expandRecursive",
		"gh": "collapseRecursive",
		"gc": "cd",
		"<2-LeftMouse>": [
			"expandable?",
			["expanded?", "collapse", "expand"],
			"open"
		],
		"<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
		"o": ["expanded?", "collapse", "expand"],
		"s": "open:split",
		"v": "open:vsplit",
		"t": "open:tab",
		"<bs>": "gotoParent",
		"gp": "preview:labeling",

		"y": "copyFilepath",
		"Y": "copyFilename",
		"c": "copyFile",
		"x": "cutFile",
		"p": "pasteFile",
		"d": "delete",
		"D": "deleteForever",

		"a": "addFile",
		"A": "addDirectory",
		"r": "rename",

		".": "toggleHidden",
		"R": "refresh",

		"?": "help",
		"q": "quit",
		"<esc>": "esc",
		"X": "systemExecute",
		"gd": "listDrive",

		"f": "search",
		"F": "searchRecursive",

		"gf": "gotoSource:file",
		"gb": "gotoSource:buffer",

		"[[": "sourcePrev",
		"]]": "sourceNext",

		"[d": "diagnosticPrev",
		"]d": "diagnosticNext",

		"[c": "gitPrev",
		"]c": "gitNext",
		"<<": "gitStage",
		">>": "gitUnstage"
	},
	"rust-analyzer.serverPath": "/usr/bin/rust-analyzer",
	"smartf.timeout": 5000
}
